<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Menu_Activity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/route_button"
        android:layout_marginTop="100dp"
        android:onClick="onClickMap"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destinations"
        android:id="@+id/destinations_button"
        android:onClick="onClickDestinations"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/route_button"
        android:layout_alignRight="@+id/route_button"
        android:layout_alignEnd="@+id/route_button"
        android:layout_alignLeft="@+id/route_button"
        android:layout_alignStart="@+id/route_button"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:id="@+id/history_button"
        android:onClick="onClickHistory"
        android:layout_below="@+id/destinations_button"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/route_button"
        android:layout_alignEnd="@+id/route_button"
        android:layout_alignLeft="@+id/route_button"
        android:layout_alignStart="@+id/route_button"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>
